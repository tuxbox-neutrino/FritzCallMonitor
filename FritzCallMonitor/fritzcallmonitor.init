#!/bin/sh

. /etc/init.d/globals

case $1 in
	start)
		if [ -e /var/etc/.fritzcallmonitor ]; then
			SHOWINFO "starting ..."
			/bin/FritzCallMonitor &
		fi
	;;
	stop)
		if [ -e /var/etc/.fritzcallmonitor ]; then
			SHOWINFO "stopping ..."
			killall FritzCallMonitor
		fi
	;;
	*)
		echo "[${BASENAME}] Usage: $0 {start|stop}"
	;;
esac
